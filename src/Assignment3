import java.util.Scanner;

public class Integers {
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		
		//getting users inputs
		System.out.println("Input 1st integer: ");
		int x1 = input.nextInt();
		System.out.println("Input 2nd integer: ");
		int y1 = input.nextInt();
		
		//difference,product,sum,average,..max min
		System.out.println("Sum of two integers: " + (x1 + y1));
		System.out.println("Difference of two integers: " + (x1 - y1));
		System.out.println("Product of two integers " + (x1 * y1));
		System.out.println("Average of two integers " + (x1 + y1)/2);
		System.out.println("Distance " + Math.sqrt(Math.pow(x1, 2)+ Math.pow(y1, 2)));
		System.out.println("Distance of two integers " + Math.abs(x1-y1));
		System.out.println("Max integer " + Math.max(x1,y1));
		System.out.println("Min integer " + Math.min(x1,y1));
	}

}

